<h3 class="mt-4 text-base font-medium text-gray-900 dark:text-gray-100">
  <%= Current.org.basket_content_member_title %>
</h3>

<ul class="text-md -ms-0.5 mt-2 space-y-1">
  <% basket_contents.each do |bc| %>
    <li class="flex flex-row items-center gap-2">
      <span class="flex size-5 flex-none items-center justify-center">
        <span class="size-1.5 rounded-full bg-gray-300 dark:bg-gray-700"></span>
      </span>

      <span>
        <%= bc.product.name %>

        <% if Current.org.basket_content_member_display_quantity? %>
          <span class="text-gray-400 dark:text-gray-500">
            (<%= display_quantity(bc.basket_quantity(basket_size), bc.unit) %>)
          </span>
        <% end %>
      </span>
    </li>
  <% end %>
</ul>

<% if Current.org.basket_content_member_note.present? %>
  <p class="mt-3 text-sm text-gray-400 italic dark:text-gray-500">
    * <%= Current.org.basket_content_member_note %>
  </p>
<% end %>
