<div class="flex justify-between mb-8 mt-1">
  <h1 class="text-xl sm:text-2xl font-extrabold text-gray-900 dark:text-gray-100">
    <%= Newsletter.model_name.human(count: 2) %>
  </h1>
</div>

<% if newsletter_unsubscribed? %>
  <div class="mb-8 p-2 rounded-lg border-1 border-dashed border-orange-500 text-orange-600 dark:text-orange-400 flex flex-wrap items-center justify-center gap-1">
    <p class="ml-1 grow">
      <%= t(".unsubscribed_html", email: current_session.email) %></span>
  </p>
  <%= button_to t(".subscribe"), members_email_suppression_path, method: :delete, class: "btn btn-sm", data: { turbo: false } %>
</div>
<% end %>

<ul id="newsletters" class="mt-4 flex flex-col gap-6">
  <%= render @newsletters %>
</ul>

<% if @next_offset %>
  <%= render "show_more" %>
<% end %>
