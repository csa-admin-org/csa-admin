<ul class="flex flex-row flex-wrap justify-center space-x-4">
  <% balance = current_member.balance_amount %>

  <% if balance >= 0 %>
    <%= render "summary_card",
      label: t("members.billing.index.credit_amount"),
      value: cur(balance) %>
  <% else %>
    <%= render "summary_card",
      label: t("members.billing.index.missing_amount"),
      value: cur(-balance),
      value_class: "text-red-500" %>
  <% end %>

  <% if Current.org.annual_fee? || !current_member.annual_fee.nil? %>
    <%= render "summary_card",
      label: t("members.billing.index.annual_fee"),
      value: cur(current_member.annual_fee) %>
  <% end %>

  <% if Current.org.share? %>
    <%= render "summary_card",
      label: t("members.billing.index.shares"),
      value: current_member.shares_number %>
  <% end %>

  <%= render "summary_card",
    label: Membership.human_attribute_name(:billing_year_division),
    value: t("billing.year_division.x#{@membership&.billing_year_division || 1}") %>
</ul>
