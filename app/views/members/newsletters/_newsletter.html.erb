<% delivery = newsletter.deliveries.first %>

<li class="w-full" >
  <details>
    <summary class="list-none cursor-pointer">
      <div class="">
        <h3 class="text-base font-medium text-pretty text-gray-800 dark:text-gray-200">
          <%= delivery.subject %>
        </h3>
        <span class="text-sm font-normal">
          <%= l newsletter.sent_at.to_date %>
        </span>
      </div>
    </summary>

    <div class="mt-2 mb-8">
      <%= turbo_frame_tag delivery,
        src: members_newsletter_delivery_path(delivery),
        loading: "lazy", target: "_top" do %>
        <div class="mail_preview">
          <div class="flex items-center h-42 justify-center">
            <svg class="h-20 w-20 animate-spin text-gray-400 dark:text-gray-600" viewBox="0 0 100 100" >
              <circle fill="none" stroke-width="5" class="stroke-current opacity-50" cx="50" cy="50" r="40" />
              <circle fill="none" stroke-width="5" class="stroke-current" stroke-dasharray="270" stroke-dashoffset="210" cx="50" cy="50" r="40" />
            </svg>
          </div>
        </div>
      <% end %>
    </div>
  </details>
</li>
