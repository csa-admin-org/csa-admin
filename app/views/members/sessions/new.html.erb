<h1 class="mb-4">
  <%= t(".title") %>
</h1>

<div class="mt-2 text-justify">
  <p><%= t(".text", features: member_features_sentence) %></p>
  <p class="mt-2"><%= t(".form_text") %></p>
</div>

<div class="mt-8">
  <%= simple_form_for [ :members, @session ] do |f| %>
    <div class="flex flex-col mt-8">
      <%= f.input :email, as: :email, label_html: { class: "sr-only" }, input_html: {  required: true, placeholder: t(".email_placeholder") }, wrapper_html: { class: "grow" } %>
      <div class="actions mt-4">
        <%= f.button :submit, t(".submit") %>
      </div>
    </div>
  <% end %>
</div>
