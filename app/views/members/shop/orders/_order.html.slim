- @order.state = Shop::Order::PENDING_STATE
- @order.validate
- @order.state = Shop::Order::CART_STATE
- @order.items.each(&:validate)
- submit_disabled = @order.items.any? { |i| i.errors.any? } || @order.errors.any?

= simple_form_for @order, url: members_shop_order_path(@order), method: :patch, data: { controller: 'form-submitter', form_submitter_target: 'form' } do |f|
  div class="mt-2 space-y-4 md:space-y-2"
    = f.simple_fields_for :items, @order.items.sort_by { |i| [i.product.name, i.product_variant.name] } do |ff|
      div class='-mx-1 my-1 px-1 py-1 flex rounded flex-row items-center hover:bg-gray-100 dark:hover:bg-gray-900'
        = ff.label :quantity, class: 'flex-1 flex flex-col justify-start md:flex-row' do
          div class='mt-1 w-full flex flex-1 text-left flex-row flex-wrap items-center'
            span class='mr-2'
              = ff.object.product.name
              = ', '
              = ff.object.product_variant.name
            span class='mr-2 text-left text-xs text-gray-400 whitespace-nowrap'
              = cur(ff.object.item_price)

            - if available_products.exclude?(ff.object.product) || ff.object.product_variant.unavailable?
              span class="px-2 my-1 text-xs text-red-500 dark:text-red-400 rounded-full bg-red-100 dark:bg-red-800 whitespace-nowrap"
                = t('.unavailable')
            - elsif !ff.object.product_variant.available_stock?(ff.object.quantity + 5)
              span class="px-2 my-1 text-xs text-red-500 dark:text-red-400 rounded-full bg-red-100 dark:bg-red-800 whitespace-nowrap"
                = t('.stock', count: ff.object.product_variant.stock)


          div class='mt-1 md:mt-0 flex-none flex flex-row items-center justify-end'
            span class="ml-2" title="#{ff.object.quantity} x #{cur(ff.object.item_price)}"
              = cur(ff.object.amount)

            = ff.input :quantity, as: :numeric, label: false, wrapper_html: { class: 'ml-2 flex-none flex flex-row h-8 rounded-lg relative bg-gray-200 dark:bg-gray-800', data: { controller: 'form-number-controls'} } do
              button aria-label="minus" class="bg-gray-200 dark:bg-gray-800 text-gray-400 dark:text-gray-600 hover:bg-gray-300 dark:hover:bg-gray-700 rounded-l cursor-pointer outline-none z-0 " data-action="form-number-controls#decrement"
                div class="mx-2 flex items-center"
                  - if ff.object.quantity == 1
                    = inline_svg_tag('members/trash.svg', class: 'w-4 h-4 flex-shrink-0 stroke-current')
                  - else
                    = inline_svg_tag('members/minus.svg', class: 'w-4 h-4 flex-shrink-0 stroke-current')

              = ff.input_field :quantity, class: 'controls-none outline-none focus:outline-none border-none text-center dark:text-gray-400 w-8 bg-gray-200 dark:bg-gray-800 font-semibold px-0 hover:text-black dark:hover:text-gray-200 focus:text-black dark:focus:text-white md:text-base cursor-default focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 text-gray-700 z-10', min: 0, max: ff.object.product_variant.stock, data: { form_number_controls_target: 'input', action: "change->form-submitter#submit" }

              button aria-label="plus" class="bg-gray-200 dark:bg-gray-800 text-gray-400 dark:text-gray-600 rounded-r cursor-pointer outline-none #{'hover:bg-gray-300 dark:hover:bg-gray-700' if !ff.object.product_variant.stock || ff.object.quantity < ff.object.product_variant.stock.to_i}" data-action="form-number-controls#increment" disabled=(available_products.exclude?(ff.object.product) || ff.object.product_variant.unavailable? || (ff.object.product_variant.stock && ff.object.quantity >= ff.object.product_variant.stock.to_i))
                div class="mx-2 flex items-center"
                  = inline_svg_tag('members/plus.svg', class: 'w-4 h-4 flex-shrink-0 stroke-current')

  div class='mt-6 md:mt-4 flex flex-row items-center justify-end'
    div class="text-right"
      span class='border-t border-gray-500 pl-1 mr-2 font-medium'
        span
          = t('.total')
        span class='ml-4'
          = cur(f.object.amount)

    div class='w-24 text-sm text-gray-400 dark:text-gray-600 flex flex-row items-center justify-end' title=t('.order_total_weight')
      = inline_svg_tag('members/scale.svg', class: 'w-4 h-4 stroke-current')
      span class='ml-1'
        = kg(f.object.weight_in_kg)

  = f.button :submit, t('.submit_order'), class: 'hidden', aria: { label: 'update_order' }

- if @order.errors[:base].any?
  div class='flex flex-row items-center justify-end'
    span class="mt-2 -mb-2 py-1 px-2 text-red-500 bg-red-100 dard:bg-red-900 rounded"
      = @order.errors[:base].join(', ')

div class='w-full mt-8 flex flex-col md:flex-row md:justify-end'
  div class='mt-2 md:mt-0 order-2 md:order-1 flex items-center'
    = link_to t('.continue_shopping'), shop_path, class: 'button md:min-w-min min-w-full text-center py-2 px-4 border border-green-400 dark:border-green-600 hover:border-green-500 hover:bg-green-500 font-medium rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 text-base cursor-pointer', target: '_top'
  div class='w-full md:w-auto order-1 md:order-2 md:ml-2 flex items-center'
    = button_to t('.submit_order'), confirm_members_shop_order_path(@order), disabled: submit_disabled, class: "md:min-w-min min-w-full py-2 px-4 border #{!submit_disabled ? 'text-white hover:text-white border-green-400 dark:border-green-600 bg-green-400 dark:bg-green-600 hover:border-green-500 hover:bg-green-500 focus:outline-none focus:ring-green-500 focus:border-green-500 cursor-pointer' : 'text-gray-400 dark:text-gray-600 dark:border-gray-800 bg-gray-200 dark:bg-gray-800 cursor-not-allowed'} font-medium rounded-md ocus:z-10 text-base", form: { data: { turbo: false }, class: 'w-full' }, aria: { label: 'confirm_order' }


div class='mt-12 flex flex-row justify-center md:justify-end'
  = button_to members_shop_order_path(@order), method: :delete, form: { data: { turbo: false, controller: "confirmation", confirmation_message_value: t('.destroy_cart_confirm'), action: "submit->confirmation#confirm" } }, class: 'focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 text-base cursor-pointer' do
      div class='flex flex-row items-center'
        = inline_svg_tag('members/trash.svg', class: 'w-4 h-4 stroke-current')
        span class='ml-1 text-sm font-normal'
          = t('.destroy_cart')
