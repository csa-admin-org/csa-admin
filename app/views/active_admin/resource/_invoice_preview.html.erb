<div class="relative w-full h-full" style="height: 987px">
  <div class="absolute inset-0 flex justify-center z-10 pt-16 md:pt-60">
    <svg class="h-20 w-20 animate-spin text-gray-400 dark:text-gray-600" viewBox="0 0 100 100" >
      <circle fill="none" stroke-width="5" class="stroke-current opacity-50" cx="50" cy="50" r="40" />
      <circle fill="none" stroke-width="5" class="stroke-current" stroke-dasharray="270" stroke-dashoffset="210" cx="50" cy="50" r="40" />
    </svg>
  </div>
  <% unless invoice.processing? %>
    <%= image_tag invoice.pdf_file.preview(resize_to_limit: [ 2000, 2000 ]), class: "absolute top-0 z-20" %>
  <% end %>
</div>
