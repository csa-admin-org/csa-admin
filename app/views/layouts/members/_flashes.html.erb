<% flash.each do |type, msg| %>
  <% case type %>
  <% when "alert" %>
    <div class="flash mb-8 bg-red-100 dark:bg-red-900 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 p-2 rounded-sm flex items-center">
      <%= icon "exclamation-triangle", class: "size-5 w-8" %>
      <span class="ml-2"><%= msg %></span>
    </div>
  <% when "notice" %>
    <div class="flash mb-8 bg-green-100 dark:bg-green-900 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 p-2 rounded-sm flex items-center">
      <%= icon "information-circle", class: "size-5 w-8" %>
      <span class="ml-2"><%= msg %></span>
    </div>
  <% end %>
<% end %>
